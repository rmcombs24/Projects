<Window x:Class="MassMediaEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MassMediaEditor"
        mc:Ignorable="d"
        Title="Mass Media Editor v0.0.5" Height="452" Width="800"
        ResizeMode="CanMinimize" >

    <Grid Background="#FF5D5A5A">

        <Button x:Name="btnBrowse" Content="Browse" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="BtnBrowse_Click"/>
        <Button x:Name="btnEdit" Content="Edit" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="75" Click="BtnEdit_Click" IsEnabled="False" />
        <Button x:Name="btnCommit" Content="Commit" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="75" Click="BtnCommit_Click" IsEnabled="False"/>

        <DataGrid x:Name="dgInfoBox" Height="400" Width="690" Margin="102,9,0,12" Background="#FF9C9C9C"
                  GridLinesVisibility="None" 
                  IsReadOnly="False" 
                  AutoGenerateColumns="False"  
                  CanUserAddRows="False" RenderTransformOrigin="0.498,0.365"/>

        <RadioButton x:Name="rdoPictures" Content="Pictures" HorizontalAlignment="Left" Margin="10,329,0,0" VerticalAlignment="Top" IsChecked="True" Foreground="White" />
        <RadioButton x:Name="rdoAudio" Content="Audio" HorizontalAlignment="Left" Margin="10,349,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.035,3.6" Foreground="White" />
        <RadioButton x:Name="rdoVideo" Content="Video" HorizontalAlignment="Left" Margin="10,369,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.329,-1.8" Foreground="White" />
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Left" Margin="10,389,0,0" VerticalAlignment="Top" Width="75" Click="BtnExit_Click"/>
        <Button x:Name="btnSettings" Content="Settings" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnClear" Content="Clear" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False"/>

    </Grid>
</Window>
