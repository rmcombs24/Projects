<Window x:Class="MassMediaEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MassMediaEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF5D5A5A">
        <Button x:Name="btnBrowse" Content="Browse" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="BtnBrowse_Click"/>
        <ListView x:Name="lstvInfoBox" HorizontalAlignment="Left" Height="399" Margin="90,10,0,0" VerticalAlignment="Top" Width="692" RenderTransformOrigin="1.521,0.671">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnSettings" Content="Settings" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="75"/>
        <RadioButton x:Name="rdoPictures" Content="Pictures" HorizontalAlignment="Left" Margin="10,354,0,0" VerticalAlignment="Top" Checked="RdoPictures_Checked"/>
        <RadioButton x:Name="rdoAudio" Content="Audio" HorizontalAlignment="Left" Margin="10,374,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.035,3.6" Checked="RdoAudio_Checked"/>
        <RadioButton x:Name="rdoVideo" Content="Video" HorizontalAlignment="Left" Margin="10,394,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.329,-1.8" Checked="RdoVideo_Checked"/>
    </Grid>
</Window>
